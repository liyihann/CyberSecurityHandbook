.tab-nav {
  width: 100%;
  height: 80rpx;
  background: #fff;
  white-space: nowrap;
  border-bottom: 1px solid #e4e6e6;
}
.scroll-view-item {
  display: inline-block;
  width: 188rpx;
  height: 76rpx;
  font-size: 28rpx;
  line-height: 76rpx;
  text-align: center;
}

.tab-nav-active {
  border-bottom:4rpx solid #405f80;
}
.find-content {
  height: 1085rpx;
}

.find-list {
  padding: 15rpx;
  overflow: hidden;
  background: #fff;
  border-bottom: 1px solid #e4e6e6;
}
.find-image {
  float: left;
  width: 200rpx;
  height: 200rpx;
  margin-right: 25rpx;
}

.find-title {
  font-size: 32rpx;
  margin-top: 10rpx;
}

.find-author {
  font-size: 28rpx;
  color: #666;
  margin-top: 80rpx;
}

.load-more {
  text-align: center;
  margin: 30rpx 0;
  font-size: 26rpx;
  color: #b6b6b6;
}